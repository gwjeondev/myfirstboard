extends ./layout/main

block content
    .edit-profile
        .form-container
            form(action=`${routes.user}${routes.editProfile}` method="post")
                input(type="text" name="name" placeholder="이름을 입력" value=user.name)
                input(type="password" name="password" placeholder="기존 비밀번호")
                input(type="password" name="newpassword" placeholder="바꿀 비밀번호")
                input(type="password" name="newpassword2" placeholder="비밀번호를 다시 입력")
                input(type="submit" value="변경")